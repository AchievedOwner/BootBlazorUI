@inherits BaseComponent

@typeparam TItem

<table id="@Id" class="@GetCssClass()" style="@GetStyles()" @attributes="Attributes">
    @if (HeadTemplate != null)
    {
        <thead>
            <tr>
                @if (RowNumber)
                {
                    <th style="width:@(RowNumberWidth)px">
                        @RowNumberHead
                    </th>
                }

                @HeadTemplate
            </tr>
        </thead>
    }
    <tbody>
        @for (int i = 0; i < DataSource.Count; i++)
        {
            var index = i;
            var item = DataSource[i];
            <tr @key="index">
                @if (RowNumber)
                {
                <td>
                    @(index+1)
                </td>
                }
                @RowTemplate(item)
            </tr>
        }
    </tbody>
    @if (FootTemplate != null)
    {
        <tfoot>
            <tr>
                @FootTemplate
            </tr>
        </tfoot>
    }
</table>