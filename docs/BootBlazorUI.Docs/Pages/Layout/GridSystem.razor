        <BootContainer>
            <BootRow Columns="4" BgColor="BgColor.Light">
                <BootColumn Border="true">列1</BootColumn>
                <BootColumn Border="true">列2</BootColumn>
                <BootColumn Column="6" Border="true">列3</BootColumn>
                <BootColumn Border="true">列4</BootColumn>
                <BootColumn Border="true">列5</BootColumn>
            </BootRow>
        </BootContainer>
    </RunTemplate>
