        <BootContainer MarginBottom="3">
            <BootRow Columns="2" BgColor="BgColor.Light">
                <BootColumn Border="true">列1</BootColumn>
                <BootColumn Border="true">列2</BootColumn>
                <BootColumn Border="true">列3</BootColumn>
                <BootColumn Border="true">列4</BootColumn>
                <BootColumn Border="true">列5</BootColumn>
            </BootRow>
        </BootContainer>
        <h6>三列</h6>
        <BootContainer MarginBottom="3">
            <BootRow Columns="3" BgColor="BgColor.Light">
                <BootColumn Border="true">列1</BootColumn>
                <BootColumn Border="true">列2</BootColumn>
                <BootColumn Border="true">列3</BootColumn>
                <BootColumn Border="true">列4</BootColumn>
                <BootColumn Border="true">列5</BootColumn>
            </BootRow>
        </BootContainer>
