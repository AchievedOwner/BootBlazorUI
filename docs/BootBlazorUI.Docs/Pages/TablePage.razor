@page "/table"

    <PageTitle Title="表格 Tables">
        表格是最常用的数据呈现控件。
    </PageTitle>
@code{
    class User
    {
        public string Id { get; set; }
        public string Name { get; set; }
        public DateTime Birthday { get; set; }
    }

    List<User> Users = new List<User>()
    {
        new User{ Id= "1001", Name="张三", Birthday=new DateTime(1990,5,11) },
        new User{ Id= "1002", Name="李四", Birthday=new DateTime(1996,12,15) },
        new User{ Id= "1003", Name="王五", Birthday=new DateTime(1987,1,3) },        
        new User{ Id= "1004", Name="赵六", Birthday=new DateTime(1993,10,7) }
    };
}
<PresentationPart Title="简单示例">
    <Description>
        数据源 <code>DataSource</code> 要求是一个泛型的 <code>IReadOnlyList&lt;TItem></code> 集合对象，并在 <code>RowTemplate</code> 中使用 <code>context</code> 对象每一行的对象。
    </Description>
    <RunTemplate>
        <BootTable DataSource="Users">
            <HeadTemplate>
                <th>Id</th>
                <th>Name</th>
                <th>Birthday</th>
            </HeadTemplate>
            <RowTemplate>
                <td>@context.Id</td>
                <td>@context.Name</td>
                <td>@context.Birthday</td>
            </RowTemplate>
            <FootTemplate>
                <td colspan="3">
                    共有 @Users.Count 条数据
                </td>
            </FootTemplate>
        </BootTable>        
    </RunTemplate>
    <CodeTemplate>
        @Code.GetCode(@"
