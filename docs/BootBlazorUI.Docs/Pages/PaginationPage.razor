        <BootPagination CurrentPage="1" TotalCount="100" Alignment="Flex.Around" />
        <h5>
            两端
        </h5>
        <BootPagination CurrentPage="1" TotalCount="100" Alignment="Flex.Between" />
    </RunTemplate>
    <CodeTemplate>
        @Code.GetCode(@"
```html
