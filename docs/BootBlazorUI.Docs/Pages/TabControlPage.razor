<PresentationPart Title="OnActived 事件">
    <RunTemplate>
        <BootTabControl>
            <BootTabControlPage Title="选项卡1" OnActived="@(()=>_js.InvokeVoidAsync("alert","激活第1个选项卡"))">
                第一个选项卡
            </BootTabControlPage>
            <BootTabControlPage Title="选项卡2" OnActived="@(()=>_js.InvokeVoidAsync("alert","激活第2个选项卡"))">
                第二个选项卡
            </BootTabControlPage>
        </BootTabControl>
    </RunTemplate>
    <CodeTemplate>
        @Code.GetCode(@"
```html
