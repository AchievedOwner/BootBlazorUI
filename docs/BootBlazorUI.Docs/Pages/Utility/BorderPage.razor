<PresentationPart Title="边框颜色">
    <Description>
        设置 <code>BorderColor</code> 显示边框的颜色。
    </Description>
    <RunTemplate>
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Light" BorderColor="Color.Primary" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Light" BorderColor="Color.Secondary" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Light" BorderColor="Color.Info" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Light" BorderColor="Color.Success" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Light" BorderColor="Color.Warning" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Light" BorderColor="Color.Danger" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Light" BorderColor="Color.Light" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Light" BorderColor="Color.Dark" />

    </RunTemplate>
    <CodeTemplate>
        @Code.GetCode(@"
```html
<Div Border=""true"" BorderColor=""Color.Primary"">...</Div>
<Div Border=""true"" BorderColor=""Color.Secondary"">...</Div>
<Div Border=""true"" BorderColor=""Color.Info"">...</Div>
<Div Border=""true"" BorderColor=""Color.Success"">...</Div>
<Div Border=""true"" BorderColor=""Color.Warning"">...</Div>
<Div Border=""true"" BorderColor=""Color.Danger"">...</Div>
<Div Border=""true"" BorderColor=""Color.Light"">...</Div>
<Div Border=""true"" BorderColor=""Color.Dark"">...</Div>
```
")
    </CodeTemplate>
</PresentationPart>
<Div ClearFix="true" />

<PresentationPart Title="圆角">
    <Description>
        设置 <code>Rounded</code> 参数可以轻松让边框变为圆角。
    </Description>
    <RunTemplate>
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Secondary" Rounded="true" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Secondary" RoundedTop="true" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Secondary" RoundedBottom="true" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Secondary" RoundedLeft="true" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Secondary" RoundedRight="true" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Secondary" RoundedCircle="true" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="200px" Height="100px" BgColor="BgColor.Secondary" RoundedPill="true" />
        <Div FloatLeft="true" MarginLeft="1" Border="true" Width="100px" Height="100px" BgColor="BgColor.Secondary" Rounded="false" />
    </RunTemplate>
    <CodeTemplate>
        @Code.GetCode(@"
```html
<Div Rounded=""true"">...</Div>
<Div RoundedTop=""true"">...</Div>
<Div RoundedBottom=""true"">...</Div>
<Div RoundedLeft=""true"">...</Div>
<Div RoundedRight=""true"">...</Div>
<Div RoundedCircle=""true"">...</Div>
<Div RoundedPill=""true"">...</Div>
<Div Rounded=""false"">...</Div>
```
")
    </CodeTemplate>
</PresentationPart>
